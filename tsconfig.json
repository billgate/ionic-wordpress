{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true //Allows loaders to be chained to awesome-typescript-loader.
  },
  "files": [
    "demo/app.ts",
    "src/index.ts",
    "typings/index.d.ts",
    "typings/commonjs.d.ts",
    "typings/webpack.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
